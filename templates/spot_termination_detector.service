[Unit]
Description=HySDS spot instance termination detector
After=provision-verdi.service

[Service]
ExecStart=/bin/bash -c "<%= @verdi_dir %>/bin/python <%= @verdi_dir %>/ops/hysds/scripts/spot_termination_detector.py -c 60 $(/bin/grep ^MOZART_REST_URL <%= @verdi_dir %>/ops/hysds/celeryconfig.py | /bin/awk 'BEGIN{FS=\"\\\"\"}{print $2}')"
KillMode=process
Restart=on-failure
User=ops
Group=ops

[Install]
WantedBy=multi-user.target
